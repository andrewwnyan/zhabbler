<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/player/css/player.css">
    <link rel="shortcut icon" href="/static/images/icon.png" type="image/png">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="manifest" href="manifest.json" />
    <link rel="apple-touch-icon" href="/static/images/icons/icon-512x512.png" />
    <meta name="apple-mobile-web-app-status-bar" content="#13b522" />
    <meta name="theme-color" content="#13b522" />
    <title>Жабблер</title>
</head>
<body>
    <div id="app">
        <div class="popup popup_do_not_close" id="JS_Loader">
            <div class="loader loader_cpa"><div class="loader_part loader_part_1"></div><div class="loader_part loader_part_2"></div><div class="loader_part loader_part_3"></div></div>
        </div>
        {include 'includes/navbar_top.latte'}
        <div class="container">
            {include 'includes/navbar.latte'}
            <main class="main main_messages">
                <div class="main_messages_convos">
                    <section class="main_messages_convos_top">
                        <div class="main_messages_convos_title">
                            <span>
                                {$language['messages']}
                            </span>
                        </div>
                        <div class="main_messages_convos_elements">
                            <div class="main_messages_convos_element" onclick="writeMessage();">
                                <i class='bx bxs-edit'></i>
                            </div>
                        </div>
                    </section>
                    <div id="Messages">
                        <div class="alert-msgs-con" style="display: none;">
                            <div>
                                <div>
                                    <i class='bx bx-error'></i>
                                </div>
                                <div>
                                    <span>{$language['failed_to_connect_msgs']}</span>
                                </div>
                            </div>
                        </div>
                        <div id="MessagesLoader">
                            <div class="loader">
                                <div class="loader_part loader_part_1"></div>
                                <div class="loader_part loader_part_2"></div>
                                <div class="loader_part loader_part_3"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="main_messages_im" data-convo="" style="display:none;">
                    <div class="main_messages_im_person">
                        <div class="main_messages_im_person_image">
                            <img src="/static/images/no_avatar_1900.png" alt="Profile picture">
                        </div>
                        <div class="main_messages_im_person_info">
                            <span></span>
                        </div>
                    </div>
                    <section class="main_messages_im_msgs" id="MessagesList"></section>
                    <div class="main_messages_write_message">
                        <label class="main_messages_write_message_element">
                            <input type="file" accept="image/*" hidden="" onchange="imsendimage(this, '');">
                            <i class='bx bx-image-alt' ></i>
                        </label>
                        <div class="main_messages_write_message_textarea">
                            <textarea name="message" onkeydown="sendbyenter()" placeholder="{$language['message']}..."></textarea>
                        </div>
                        <div class="main_messages_write_message_element" onclick="">
                            <i class='bx bx-send' ></i>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <preloader src="/static/player/js/zhabblerplayer.js"></preloader>
        <preloader src="/static/js/messages.js"></preloader>
        {if isset($open_msgs)}
        <preloader>openMessages("{$open_msgs}");</preloader>
        {/if}
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js" integrity="sha512-57oZ/vW8ANMjR/KQ6Be9v/+/h6bq9/l3f0Oc7vn6qMqyhvPd1cvKBRWWpzu0QoneImqr2SkmO4MSqU+RpHom3Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/static/js/main.js"></script>
</body>
</html>