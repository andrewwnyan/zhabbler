<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="shortcut icon" href="/static/images/icon.png" type="image/png">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="manifest" href="manifest.json" />
    <link rel="apple-touch-icon" href="images/icons/icon-72x72.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-96x96.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-128x128.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-144x144.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-152x152.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-384x384.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-512x512.png" />
    <meta name="apple-mobile-web-app-status-bar" content="#13b522" />
    <meta name="theme-color" content="#13b522" />
    <title>Жабблер</title>
</head>
<body>
    <div id="app">
        <div class="popup popup_do_not_close" id="JS_Loader">
            <div class="loader loader_cpa"><div class="loader_part loader_part_1"></div><div class="loader_part loader_part_2"></div><div class="loader_part loader_part_3"></div></div>
        </div>
        <style>
            .nav_options .nav_options_tab[href="/settings/dashboard"]{
                background-color: rgba(255, 255, 255, .2)!important;
                text-decoration: none;
            }
        </style>
        {include '../includes/navbar_top.latte'}
        <div class="container">
            {include '../includes/navbar.latte'}
            <main class="main">
                <div class="settings_main">
                    <div class="tabs only_mobile_flex">
                        <a class="tab" href="/settings/account">
                            {$language['account']}
                        </a>
                        <a class="tab" href="/settings/profile">
                            {$language['profile']}
                        </a>
                        <a class="tab tab_active" href="/settings/dashboard">
                            {$language['dashboard']}
                        </a>
                        <a class="tab" href="javascript:void(zhabbler.chooseLanguage());">
                            {$language['info']['flag']}
                        </a>
                        <a class="tab" href="javascript:void(zhabbler.destroySession());">
                            {$language['logout']}
                        </a>
                    </div>
                    <div class="settings_main_title">
                        <span>{$language['dashboard_settings']}</span>
                    </div>
                    <div>
                        <section class="settings_section navbar_settings_styles">
                            <div class="settings_section_title">
                                <span>{$language['navbar_settings']}</span>
                            </div>
                            <div class="settings_section_content">
                                <input type="radio" id="design_ntv_f" name="design_ntv" value="0" hidden {((new Web\Models\Personalization())->get_personalization_config($user->userID)->personalizationNavbarStyle != 1 ? "checked" : "")}>
                                <label class="choose_navbar_st" for="design_ntv_f">
                                    <img src="/static/images/settings/sidebar.png">
                                </label>
                                <input type="radio" id="design_ntv_t" name="design_ntv" hidden value="1" {((new Web\Models\Personalization())->get_personalization_config($user->userID)->personalizationNavbarStyle == 1 ? "checked" : "")}>
                                <label class="choose_navbar_st" style="margin-left: 10px;" for="design_ntv_t">
                                    <img src="/static/images/settings/top_navbar.png">
                                </label>
                            </div>
                        </section>
                    </div>
                    <form method="post" data-reload="1" action="/api/Personalization/update_personalization_config">
                        <section class="settings_section">
                            <div class="settings_section_title">
                                <span>{$language['background_url_settings']}</span>
                            </div>
                            <div class="settings_section_content">
                                <input type="text" class="input" name="background_url" placeholder="URL" value="{$personalization_config->personalizationURL}">
                            </div>
                        </section>
                        <section class="settings_section">
                            <div class="settings_section_title">
                                <span>{$language['accent_color_settings']}</span>
                            </div>
                            <div class="settings_section_content">
                                <input type="color" class="input_color" name="accent_color" value="{$personalization_config->personalizationAccent}">
                            </div>
                        </section>
                        <section class="settings_section">
                            <div class="settings_section_title">
                                <span>{$language['background_color_settings']}</span>
                            </div>
                            <div class="settings_section_content">
                                <input type="color" class="input_color" name="background_color" value="{$personalization_config->personalizationBackgroundColor}">
                            </div>
                        </section>
                        <section class="settings_section">
                            <div class="settings_section_title"></div>
                            <div class="settings_section_content">
                                <button class="button" type="submit">{$language['save']}</button>
                            </div>
                        </section>
                    </form>
                </div>
            </main>
            {include '../includes/nav_options_settings.latte'}
        </div>
        <preloader src="/static/js/settings.js"></preloader>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js" integrity="sha512-57oZ/vW8ANMjR/KQ6Be9v/+/h6bq9/l3f0Oc7vn6qMqyhvPd1cvKBRWWpzu0QoneImqr2SkmO4MSqU+RpHom3Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/static/js/main.js"></script>
</body>
</html>