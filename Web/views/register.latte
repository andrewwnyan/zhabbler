<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="shortcut icon" href="/static/images/icon.png" type="image/png">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="manifest" href="manifest.json" />
    <link rel="apple-touch-icon" href="images/icons/icon-72x72.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-96x96.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-128x128.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-144x144.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-152x152.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-192x192.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-384x384.png" />
    <link rel="apple-touch-icon" href="images/icons/icon-512x512.png" />
    <meta name="apple-mobile-web-app-status-bar" content="#13b522" />
    <meta name="theme-color" content="#13b522" />
    <title>Жабблер</title>
</head>
<body>
    <div id="app">
        <div class="popup popup_do_not_close" id="JS_Loader">
            <div class="loader loader_cpa"><div class="loader_part loader_part_1"></div><div class="loader_part loader_part_2"></div><div class="loader_part loader_part_3"></div></div>
        </div>
        {include 'includes/navbar_top.latte'}
        <div class="container">
            {include 'includes/navbar.latte'}
            <main class="main login_main">
                <div>
                    {if $opened == 1}
                    <div class="logotype_font">
                        {$language['zhabbler']}
                    </div>
                    <form method="post" data-reload="2" data-location="/dashboard" action="/api/Account/register">
                        <div class="input_place">
                            <input autocomplete="off" type="text" placeholder="{$language['name']}" name="name" class="input">
                        </div>
                        <div class="input_place">
                            <input autocomplete="off" type="text" placeholder="{$language['nickname']}" name="nickname" class="input">
                        </div>
                        <div class="input_place">
                            <input autocomplete="off" type="email" placeholder="{$language['email']}" name="email" class="input">
                        </div>
                        <div class="input_place">
                            <input autocomplete="off" type="password" placeholder="{$language['password']}" name="password" class="input">
                        </div>
                        <div class="input_place">
                            <button class="button" type="submit">
                                {$language['register']}
                            </button>
                        </div>
                        <div class="input_place">
                            <span>
                                {$language['have_you_been_here_before']} <a href="/login">{$language['login']}.</a>
                            </span>
                        </div>
                    </form>
                    {else}
                    <span>{$language['register_closed_info']|noescape}</span>
                    {/if}
                </div>
            </main>
            {include 'includes/nav_options.latte'}
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js" integrity="sha512-57oZ/vW8ANMjR/KQ6Be9v/+/h6bq9/l3f0Oc7vn6qMqyhvPd1cvKBRWWpzu0QoneImqr2SkmO4MSqU+RpHom3Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/static/js/main.js"></script>
</body>
</html>